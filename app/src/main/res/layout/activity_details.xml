<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/main_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DetailsActivity"
    android:background="@color/colorAccent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.MaterialComponents.Light">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorWhite"
            app:expandedTitleMarginEnd="@dimen/expand_title_margin"
            app:expandedTitleMarginStart="@dimen/expand_title_margin"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/poster_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/toolbar_backdrop_image" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:titleTextColor="@android:color/white"
                android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
                app:popupTheme="@style/Theme.MaterialComponents.Light"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.thebaileybrew.flix.DetailsActivity">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/movie_tagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_details"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                android:textSize="@dimen/text_default28sp"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                tools:text="An entire universe. Once and for all."/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/credits_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_tagline"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_horizontal_16dp"
                android:layout_marginRight="@dimen/margin_horizontal_16dp"
                android:id="@+id/linear_layout_headers_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/margin_vertical_16dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:id="@+id/runtime_header"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_standard_18sp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/runtime"/>
                <TextView
                    android:id="@+id/release_header"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_standard_18sp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/release_date"/>
                <TextView
                    android:id="@+id/rating_header"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_standard_18sp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/average_rating"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_horizontal_16dp"
                android:layout_marginRight="@dimen/margin_horizontal_16dp"
                android:id="@+id/linear_layout_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_headers_details"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/half_margin_vertical_4dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:id="@+id/movie_runtime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/half_margin_vertical_4dp"
                    android:textSize="@dimen/text_standard_18sp"
                    android:textColor="@color/colorWhite"
                    tools:text="1 hr 42 min"/>
                <TextView
                    android:id="@+id/movie_release"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/half_margin_vertical_4dp"
                    android:textSize="@dimen/text_standard_18sp"
                    android:textColor="@color/colorWhite"
                    tools:text="01/01/2018"/>
                <TextView
                    android:id="@+id/movie_rating"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/half_margin_vertical_4dp"
                    android:textSize="@dimen/text_standard_18sp"
                    android:textColor="@color/colorWhite"
                    tools:text="8.5"/>
            </LinearLayout>
            <View
                android:id="@+id/synopsis_guideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_genres"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/large_margin_horizontal_32dp"
                android:layout_marginRight="@dimen/large_margin_horizontal_32dp"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                android:layout_height="@dimen/half_margin_vertical_4dp"
                android:background="@color/colorPrimaryFade"
                />
            <TextView
                android:id="@+id/movie_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                app:layout_constraintTop_toBottomOf="@id/genre_guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/text_default24sp"
                android:textColor="@color/colorPrimary"
                tools:text="These are genres"/>
            <View
                android:id="@+id/genre_guideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/credits_recycler"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/large_margin_horizontal_32dp"
                android:layout_marginRight="@dimen/large_margin_horizontal_32dp"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                android:layout_height="@dimen/half_margin_vertical_4dp"
                android:background="@color/colorPrimaryFade"
                />
            <RelativeLayout
                android:id="@+id/synopsis_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                app:layout_constraintTop_toBottomOf="@id/synopsis_guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/margin_horizontal_16dp"
                android:layout_marginRight="@dimen/margin_horizontal_16dp">
                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="175dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/half_margin_vertical_4dp"
                    android:elevation="@dimen/half_margin_vertical_4dp"
                    android:layout_height="275dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/movie_poster" />
                <TextView
                    android:id="@+id/synopsis_text"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/poster"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/margin_horizontal_8dp"
                    android:layout_marginLeft="@dimen/margin_horizontal_8dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_default24sp"
                    tools:text="@string/lorem_ipsum"/>
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>