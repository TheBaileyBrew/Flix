<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:ratingBarStyle">@style/RatingBarTheme</item>
    </style>

    <style name="PreferencesTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimaryFade</item>
    </style>

    <style name="RatingBarTheme" parent="Widget.AppCompat.RatingBar">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="ExpandedToolbar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>
